generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String 

  transactions Transaction[]
  @@map("users")
}

model Transaction {
  id Int @id @default(autoincrement())
  description String
  amount Float
  date DateTime
  type TransactionType

  expenseCategory ExpenseCategory? @map("expense_category")
  incomeCategory IncomeCategory? @map("income_category")

  userId Int @map("user_id")

  user User @relation(fields: [userId], references: [id])
  @@map("transactions")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum ExpenseCategory {
  HOUSING
  TRANSPORT
  BILLS
  SHOPPING
  ENTERTAINMENT
  TAXES
  DEBTS
  GIFTS
  VEHICLE
  CREDIT_CARD
  FOOD
  HEALTH
  EDUCATION
  LAISURE
  OTHERS
}

enum IncomeCategory {
  INVESTMENTS
  SALARY
  FREELANCE
  EXTRA_INCOME
  OTHERS
}