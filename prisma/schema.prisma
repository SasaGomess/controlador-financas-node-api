generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String 

  transactions Transaction[]
  @@map("users")
}

model Transaction {
  id Int @id @default(autoincrement())
  description String
  amount Float
  date DateTime
  type TransactionType
  userId Int @map("user_id")

  user User @relation(fields: [userId], references: [id])
  @@map("transactions")
}

enum TransactionType {
  INCOME
  EXPENSE
}